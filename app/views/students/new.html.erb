<%= stylesheet_link_tag("https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css") %>
<%= javascript_include_tag("https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js") %>
<div class="center-block col-xs-4" style="float:none">
  <div class="text-center">
    <h1>Join the Challenge!</h1>
  </div>
  <%= form_for :student, url: students_path do |f| %>
    <div class="form-group">
      <%= f.label :name, "Name:" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email_address, "Email Address:" %>
      <%= f.text_field :email_address, class: "form-control" %>
    </div>

    <%= f.submit 'Sign up' %>
  <% end %>
</div>
